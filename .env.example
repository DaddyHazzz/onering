# .env.example

# Environment
ENV=development
CONFIG_STRICT=false
BASE_URL=http://localhost:8000
BACKEND_URL=http://localhost:8000

# Next.js/Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_...
CLERK_ISSUER=https://your-clerk.accounts.dev
CLERK_AUDIENCE=your-app
CLERK_JWKS_URL=

# Core APIs
GROQ_API_KEY=gsk_...

# Database & Cache
DATABASE_URL=postgresql://user:pass@localhost:5432/onering
TEST_DATABASE_URL=
REDIS_URL=redis://localhost:6379/0

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_PLACEHOLDER_YOUR_KEY_HERE
STRIPE_SECRET_KEY=sk_test_PLACEHOLDER_YOUR_KEY_HERE
STRIPE_PRICE_ID=price_...
# CRITICAL: Webhook secret must NEVER be committed to git
# Use GitHub Secrets (STRIPE_WEBHOOK_SECRET) in CI/CD
# For local dev: generate from Stripe Dashboard → Webhooks → Test in Live Mode
# Format: whsec_test_... (test mode) or whsec_... (production, never commit)
STRIPE_WEBHOOK_SECRET=whsec_REDACTED

# Twitter (X)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_USERNAME=

# Meta (Instagram / Facebook pages)
META_ACCESS_TOKEN=
META_PAGE_ID=

# Rate limiting (Phase 6.3)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE_DEFAULT=120
RATE_LIMIT_BURST_DEFAULT=30

# WebSocket limits (Phase 6.3)
WS_LIMITS_ENABLED=false
WS_MAX_SOCKETS_PER_USER=3
WS_MAX_SOCKETS_PER_DRAFT=100
WS_MAX_SOCKETS_GLOBAL=1000
WS_MAX_MESSAGE_BYTES=4096
WS_ALLOWED_ORIGINS=*

# Audit logging (Phase 6.3)
AUDIT_ENABLED=false
AUDIT_SAMPLE_RATE=1.0
